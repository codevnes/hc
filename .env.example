# API URL Configuration
# Change this to your server's IP or domain
API_URL=http://your-server-ip:5000/api

# CORS Origins Configuration
# List of allowed origins for CORS
CORS_ORIGIN=http://your-server-ip:3000,http://localhost:3000,http://frontend:3000

# Database Configuration
DB_HOST=db
DB_USER=root
DB_PASSWORD=your_database_password
DB_NAME=hc_stock

# JWT Secret for Authentication
JWT_SECRET=your_jwt_secret_key

# TinyMCE API Key
NEXT_PUBLIC_TINYMCE_API_KEY=your_tinymce_api_key

# Node Environment
NODE_ENV=production

# Frontend Port
FRONTEND_PORT=3000

# Backend Port
BACKEND_PORT=5000

# Database Port
DATABASE_PORT=3306
